.post
	padding-bottom 2em

	.post-header

		.post-title
			margin-bottom 0.2em

			a
				color inherit
				font inherit

		.meta
			color #999
			font-size 90%
			margin 0

			.tags
				list-style none
				margin 0
				display inline-block
				padding 0
				padding-left 1em

				li
					display inline
					margin-left 0.5em
	
	.post-content
		font-family Georgia, "Cambria", serif
		text-align justify
		color #444
		line-height 1.8em

.archive
	h1
		margin-bottom 0.2em

	ul.years
		margin 0

	ul.months
		margin 0

	ul.posts
		margin 0