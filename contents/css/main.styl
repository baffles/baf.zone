@import 'nib'

body
	margin 0
	padding 0

.sidebar
	background #151515
	color white

	.header
		text-align center
		top auto
		margin 3em auto

.footer
	text-align center
	padding 1em 0
	color #ccc
	font-size 80%

	a
		color inherit

		&:hover, &:focus
			background none

	.copyright
		text-align right
		margin 0

.content-subhead
	color #aaa
	border-bottom 1px solid #eee
	padding 0.4em 0
	font-size 80%
	font-weight 500
	letter-spacing 0.1em

a
	text-decoration none
	color rgb(61, 146, 201)

	&:hover, &:focus
		text-decoration underline

@media (min-width: 48em)
	.content
		padding 2em 3em 0
		margin-left 25%

	.sidebar
		position fixed
		top 0
		bottom 0

		.header
			margin 80% 2em 0
			text-align right

			.title, .tagline
				margin 0
			.tagline
				color #7f2a06
				font-weight 300

			.nav-list
				margin 0
				padding 0
				list-style none

				.nav-item
					display inline-block
					zoom 1

					a
						background transparent
						border 2px solid #7F2A06
						color white
						margin-top 1em
						letter-spacing 0.05em
						font-size 85%

						&:hover, &:focus
							border 2px solid #FF530D
							text-decoration none