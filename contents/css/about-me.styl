@import 'nib'

ul.touchpoints
	margin 0
	padding 0

	li
		display inline
		list-style none

		margin-left 8px
		&:first-child
			margin-left 0

		a.touchpoint
			text-decoration none

			.icon
				color #151515
				opacity 0.5
				transition 0.25s ease

				&:hover
					color #7F2A06
					opacity 1.0
					transform-origin center center
					transform scale(1.4)

#me
	clearfix()

	#photo
		float left
		background url("https://graph.facebook.com/baf/picture?width=180&height=180")
		width 180px
		height 180px
		box-sizing border-box
		border 4px solid #151515
		border-radius 45px

	.touchpoints
		height 4em
		padding-top calc(90px - 2em)
		margin-left calc(180px + 2em)