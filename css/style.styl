@import 'nib'

#me
	width 750px
	height 188px

	absolute left 50% top 50%
	margin -94px 0 0 -375px

	.identification
		width 750px
		height 188px
		line-height 90px

		#photo
			float left
			//TODO: use // instead of https:// (this screws with file:// though)
			background url('https://graph.facebook.com/baf/picture?width=180&height=180')
			width 180px
			height 180px
			border 4px solid #000
			border-radius 25px
			margin-right 20px
	
		.name
			font-size 3em
	
		.aka-text
			margin-left 5px
			color black
			font-size 1.25em
			
			.paren
				animation fadeIn 2s ease 1s
				animation-fill-mode both
			
			.aka
				font-size 45%
				animation fadeIn 2s ease 1.5s
				animation-fill-mode both
			
			.baf
				font-size 100%
				animation bafEntrance 2s ease 2.25s
				animation-fill-mode both
	
		ul.links
			li
				display inline
				list-style none
			
				a
					text-decoration none
					color black
				
					.icon
						opacity 0.5
						transition 0.25s ease
						
						animation linkEntrance 0.75s ease 0.75s
						animation-fill-mode backwards
				
					.icon:hover
						opacity 1.0
						transform-origin center center
						transform scale(1.5)

.markdown-container
	width 1000px
	height 700px
	overflow auto

.fallback-message
	font-family sans-serif
	line-height 1.3

	width 780px
	padding 10px 10px 0
	margin 20px auto

	border 1px solid #E4C652
	border-radius 10px
	background #EEDC94

.fallback-message p
	margin-bottom 10px

#navbar
	padding 4px
	position absolute
	top 0
	left 0
	
	li
		display inline
		list-style none
		margin-right 3px
		
		a
			text-decoration underline
			color rgb(0, 0, 238)

#copyright
	padding 4px
	position absolute
	bottom 0
	left 0
	
	font-size 0.75em
	color #2D3D4D

#github-ribbon
	img
		position absolute
		top 0
		right 0
		border 0

// adapted from https://gist.github.com/1535091
.markdown-container::-webkit-scrollbar
	height 12px
	width 12px
	overflow visible

.markdown-container::-webkit-scrollbar-button
	height 0
	width 0

.markdown-container::-webkit-scrollbar-track
	background-clip padding-box
	border solid transparent
	border-width 0 0 0 4px

.markdown-container::-webkit-scrollbar-track:horizontal
	border-width 4px 0 0

.markdown-container::-webkit-scrollbar-track:hover
	background-color rgba(0, 0, 0, .05)
	box-shadow inset 1px 0 0 rgba(0, 0, 0, .1)

.markdown-container::-webkit-scrollbar-track:horizontal:hover
	box-shadow inset 0 1px 0 rgba(0, 0, 0, .1)

.markdown-container::-webkit-scrollbar-track:active
	background-color rgba(0, 0, 0, .05)
	box-shadow inset 1px 0 0 rgba(0, 0, 0, .14), inset -1px 0 0 rgba(0, 0, 0, .07)

.markdown-container::-webkit-scrollbar-track:horizontal:active
	box-shadow inset 0 1px 0 rgba(0, 0, 0, .14), inset 0 -1px 0 rgba(0, 0, 0, .07)

.markdown-container::-webkit-scrollbar-thumb
	background-color rgba(0, 0, 0, .2)
	background-clip padding-box
	border solid transparent
	border-width 1px 1px 1px 6px
	min-height 28px
	padding 100px 0 0
	box-shadow inset 1px 1px 0 rgba(0, 0, 0, .1), inset 0 -1px 0 rgba(0, 0, 0, .07)

.markdown-container::-webkit-scrollbar-thumb:horizontal
	border-width 6px 1px 1px
	padding 0 0 0 100px
	box-shadow inset 1px 1px 0 rgba(0, 0, 0, .1), inset -1px 0 0 rgba(0, 0, 0, .07)

.markdown-container::-webkit-scrollbar-thumb:hover
	background-color rgba(0, 0, 0, .4)
	box-shadow inset 1px 1px 1px rgba(0, 0, 0, .25)

.markdown-container::-webkit-scrollbar-thumb:active
	background-color rgba(0, 0, 0, 0.5)
	box-shadow inset 1px 1px 3px rgba(0, 0, 0, 0.35)

.markdown-container::-webkit-scrollbar-corner
	background: transparent


@keyframes fadeIn
	from
		opacity 0
	to
		opacity 1

@keyframes bafEntrance
	from
		opacity 0

	30%
		font-size 100%
		color black

	65%
		font-size 150%
		color red

	95%
		font-size 100%
		color black

	to
		opacity 1

@keyframes linkEntrance
	from
		opacity 0
		transform scale(2.5)

	to
		opacity 0.5
		transform scale(1)
