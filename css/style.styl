@import 'nib'

@keyframes fadeIn
	from
		opacity 0
	to
		opacity 1

@keyframes awesomeEntrance
	from
		opacity 0
	
	30%
		font-size 100%
		color black
	
	65%
		font-size 150%
		color red
	
	95%
		font-size 100%
		color black
	
	to
		opacity 1

@keyframes linkEntrance
	from
		opacity 0
		transform scale(2.5)
	
	to
		opacity 0.5
		transform scale(1)

#me
	.identification
		width 750px
		line-height 90px

		#photo
			float left
			background url('http://graph.facebook.com/baf/picture?width=180&height=180')
			width 180px
			height 180px
			border 4px solid #000
			border-radius 25px
			margin-right 20px
	
		.name
			font-size 3em
	
		.title
			margin-left 5px
			color black
			font-size 1.25em
			
			.paren
				animation fadeIn 2s ease 1s
				animation-fill-mode both
			
			.is
				animation fadeIn 2s ease 1.5s
				animation-fill-mode both
			
			.awesome
				animation awesomeEntrance 2s ease 2.25s
				animation-fill-mode both
	
		ul.links
			li
				display inline
				list-style none
			
				a
					text-decoration none
					color black
				
					.icon
						opacity 0.5
						transition 0.25s ease
						
						animation linkEntrance 0.75s
						animation-fill-mode backwards
				
					.icon:hover
						opacity 1.0
						transform-origin center center
						transform scale(1.5)

.fallback-message
	font-family sans-serif
	line-height 1.3

	width 780px
	padding 10px 10px 0
	margin 20px auto

	border 1px solid #E4C652
	border-radius 10px
	background #EEDC94

.fallback-message p
	margin-bottom 10px

.impress-supported .fallback-message
	display none

#github-ribbon
	img
		position absolute
		top 0
		right 0
		border 0
