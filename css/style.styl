#name-header
{
	position: fixed;
	left: 20px;
	top: 20px;

	line-height: 180px;
	font-size: 3em;
}

#fb-photo
{
	float: left;
	background: url('http://graph.facebook.com/baf/picture?type=large');
	width: 180px;
	height: 180px;
	border: 4px solid #000;
	border-radius: 25px;
	margin-right: 20px;
}

ul#link-container
{
	position: fixed;
	right: 20px;
	top: 50px;
}

ul#link-container li
{
	list-style: none;
}

ul#link-container li a
{
	text-decoration: none;
	color: black;
}

.icon
{
	width: 30px;
	opacity: 0.8;
	-webkit-transition: 0.25s ease;
	/*-webkit-transition: opacity 0.5s ease;*/
}

.icon:hover
{
	margin-top: 0.3125em;
	margin-bottom: 0.3125em;
	opacity: 1.0;
	-webkit-transform-origin: right center;
	-webkit-transform: scale(1.5);
}